# Server Configuration
PORT=8080
NODE_ENV=production

# API Keys (optional but recommended for better rate limits)
DEFILLAMA_API_KEY=

# RPC URLs for each chain
RPC_URL_ETHEREUM=
RPC_URL_OPTIMISM=
RPC_URL_GNOSIS=
RPC_URL_POLYGON=
RPC_URL_FANTOM=
RPC_URL_BASE=
RPC_URL_ARBITRUM=

# Cache Configuration
CACHE_TTL_SECONDS=60
CACHE_CHECK_PERIOD_SECONDS=300

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Storage Configuration
STORAGE_TYPE=file  # Options: file, redis
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=
REDIS_LOAD_BACKUP=false  # Set to true to migrate existing file data to Redis